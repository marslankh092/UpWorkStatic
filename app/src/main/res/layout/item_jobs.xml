<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:text="Hourly - Posted 2 hours ago"
        android:textColor="#D1D1D1"
        android:textSize="13sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:text="Upwork Redesign Project"
        android:textColor="#6EB943"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:text="6 Months"
        android:textColor="#4A4A4A"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:paddingTop="7dp"
        android:text="Platform BYOB which stands for  BeYourOwnBoss will be a social media to give a platform to entrepreneurs and investors and freelancers enhance the way they regularly network"
        android:textColor="#C4C4C4"
        android:textSize="14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/button_shape"
        android:padding="3dp"
        android:text="Payment Verified"
        android:textColor="#FFFFFF"
        android:textSize="10sp" />

</LinearLayout>